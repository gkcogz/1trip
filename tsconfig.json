{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["vite/client", "react", "react-dom"],   // <-- ekle/koru
    "paths": {
      "@lib/*": ["src/lib/*"],
      "@state/*": ["src/state/*"],
      "@components/*": ["src/components/*"]
    }
  },
  "include": ["src"]
}
